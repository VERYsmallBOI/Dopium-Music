<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Song List -->
    <ExpandableListView
        android:id="@+id/expSongList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp" />

    <!-- Now Playing Bar -->
    <LinearLayout
        android:id="@+id/nowPlayingBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        android:padding="8dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/nowPlayingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Playing"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/nextPlayingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next: "
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:paddingTop="4dp"/>
        <!-- Time + SeekBar Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/songSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:value="0"
                android:valueFrom="0"
                android:valueTo="100"
                app:thumbColor="@color/purple_500"
                app:trackColorActive="@color/purple_200"
                app:trackColorInactive="@color/purple_700" />

            <TextView
                android:id="@+id/totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>




        <com.google.android.material.button.MaterialButton
            android:id="@+id/playPauseBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="0.5"

            android:text="Play/Pause" />

    </LinearLayout>
</LinearLayout>